<Window x:Class="Secretarias"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital_Ultimate"
        mc:Ignorable="d"
        Title="Secretaria"
        Height="600" Width="1050"
        FontFamily="Noto Sans"
        WindowStyle="None" AllowsTransparency="True"
        Background="{DynamicResource MaterialDesignPaper}">
    <materialDesign:DrawerHost IsLeftDrawerOpen = "{Binding ElementName=btn_menu, Path=IsChecked}">
        <materialDesign:DrawerHost.LeftDrawerContent>
            <DockPanel MinWidth="200">
                <Rectangle
                    Height="10"
                    DockPanel.Dock="Bottom" Fill="#FF1976D2"/>
                <ToggleButton Style="{StaticResource MaterialDesignHamburgerToggleButton}" 
                                  x:Name="btn_rtn"
                                  DockPanel.Dock="Top"
                                  HorizontalAlignment="Right"
                                  Height="23" Width="23"
                                  Margin="0 8 8 0"
                                  IsChecked="{Binding ElementName=btn_menu, Path=IsChecked, Mode=TwoWay}"/>
                <ListBox x:Name="lat_menu"
                             Margin="0 16 0 0"
                         DockPanel.Dock="Top"
                         Foreground="#FF1976D2"
                             FontWeight="Heavy"
                         SelectedIndex="-1">
                    <ListBoxItem x:Name="generador_ticket"
                                     Content="Secretaria"/>
                    <ListBoxItem x:Name="pnl_espera"
                                     Content="Panel de Espera"
                                     Cursor="Hand"/>
                    <ListBoxItem x:Name="config_pnlespera"
                                     Content="Configuración"
                                     Cursor="Hand"/>
                    <Separator/>
                    <ListBoxItem x:Name="cls_sesion"
                                     Content="Cerrar Sesión"
                                     Cursor="Hand"/>
                    <ListBoxItem x:Name="btn_close"
                                     Content="Salir"
                                     Cursor="Hand"/>
                </ListBox>
                <TextBlock 
                               Margin="10 0 0 16"
                                   Text="Mi ID: "
                               FontSize="15"
                               FontWeight="Bold"
                                   VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
                <TextBlock x:Name="IDscr"
                               Margin="5 0 0 16"
                               FontSize="15"
                               FontWeight="Bold"
                               VerticalAlignment="Bottom"/>
            </DockPanel>
        </materialDesign:DrawerHost.LeftDrawerContent>
        <materialDesign:DialogHost Identifier="RootDialog" SnackbarMessageQueue="{Binding ElementName=MainSnack, Path=MessageQueue}">
                <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border x:Name="win_move"
            CornerRadius="0,0,20,20">
                    <materialDesign:ColorZone
            Mode="PrimaryDark"
            Padding="10"
            CornerRadius="0,0,15,15"
            materialDesign:ShadowAssist.ShadowDepth="Depth3"
            Margin="0" Grid.RowSpan="2">
                        <DockPanel>
                            <ToggleButton x:Name="btn_menu"
                                          Style="{StaticResource MaterialDesignHamburgerToggleButton}"
                                          IsChecked="False"
                                          Cursor="Hand"
                                          Width="23" Height="23"/>
                            <TextBlock x:Name="Secretaria_Nom"
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    Margin="0 0 23 0"
                    Text="Secretarias"
                    DockPanel.Dock="Top">
                            </TextBlock>
                        </DockPanel>
                    </materialDesign:ColorZone>
                </Border>
                <materialDesign:Snackbar x:Name="MainSnack"
                                     MessageQueue="{materialDesign:MessageQueue}"
                                     Grid.Row="1"/>
                <Grid x:Name="panel_secretaria"
                      Grid.Row="1"/>
            </Grid>
    </materialDesign:DialogHost>
    </materialDesign:DrawerHost>
</Window>
